<legend><%= f.label :rating %></legend> <br>
<%= f.collection_radio_buttons :rating , [[1, '1-star'] ,[2, '2-stars'],[3, '3-stars'],[4, '4-stars'],[5, '5-stars']], :first, :last %>
<br><br>
<legend><%= f.label :content, "Comments" %> </legend><br>
<%= f.text_area :content %>


<div class="errors">
  <% if @review.errors.any? %>
    <br><br>
    <h2>Errors:</h2>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

